@page
@model PLS.SKS.Package.Services.Pages.ReportHopModel
@{
    ViewData["Title"] = "Report Parcel Hop";
}

<h2>ReportHop</h2>

<html>
<body>
    <div class="row">
        <div class="col-md-5">
            <form method="POST">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TrackingNumber" class="control-label"></label>
                    <input asp-for="TrackingNumber" class="form-control" />
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="TrackingNumber" class="text-danger"></span>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <input type="submit" />
            </form>
        </div>
        <div class="col-md-5">
            <div>
                @if (Model.Message != null)
                {
                    <span>@Model.Message</span>

                }
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
